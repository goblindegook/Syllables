  bootstrap="vendor/autoload.php"
  backupGlobals="false"
  colors="true"
  convertErrorsToExceptions="true"
  convertNoticesToExceptions="true"
  convertWarningsToExceptions="true"
  >
  <testsuites>
    <testsuite>
      <directory prefix="Test_" suffix=".php">./tests/</directory>
    </testsuite>
  </testsuites>
</phpunit>
